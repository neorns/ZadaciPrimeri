<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <!-- Declares a button that starts 2nd activity -->
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/start_activity"
        android:id="@+id/start_activity"
        android:onClick="btnStartActivityClicked"
        android:drawableLeft="@drawable/ic_start_activity_2"
        />

    <!-- Declares a button that opens a browser -->
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/open_browser"
        android:id="@+id/open_browser"
        android:onClick="btnOpenBrowserClicked"
        android:drawableLeft="@drawable/ic_open_browser"
        />
</LinearLayout>


    <ListView
        android:id="@+id/listJela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    
</LinearLayout>